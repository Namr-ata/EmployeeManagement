@{
}
@model Employee

@using (Html.BeginForm())
{
    <div class="mb-3">
        Name: @Html.TextBoxFor(model => model.Name)
    </div>
    <div class="mb-3">
        Address: @Html.TextBoxFor(model => model.Address)
    </div>
    <div class="mb-3">
        Salary: @Html.TextBoxFor(model => model.Salary)
    </div>
    <div class="mb-3">
        Department: @Html.TextBoxFor(model => model.Department)
    </div>
    <div class="mb-3">
        <input type="submit" value="Add Employee" />
    </div>
}
